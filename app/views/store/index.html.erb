<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.price.to_f/100) %> | Inventory: <%= item.inventory %></p>
  <% if user_signed_in? %>
    <%= button_to "Add to Cart", line_items_path(item_id: item) %></li>
  <% end %>
<% end %>
